<div class="devise">
  <h2>註冊會員</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :phone,
                  label: "電話",
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "phone" }%>
      <%= f.input :password,
                  label: "密碼",
                  required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation,
                  label: "確認密碼",
                  required: true,
                  input_html: { autocomplete: "new-password" } %>
      <%= f.association :store,
                  label: "註冊門市",
                  prompt: "請選擇門市",
                  required: true %>
      <%= f.input :sex,
                  label: "性別",
                  as: :radio_buttons,
                  collection: [["男性", "male"], ["女性", "female"]],
                  required: true %>
      <%= f.input :address,
                  label: "地址" %>
      <%= f.input :email,
                  label: "Email" %>
      <%= f.input :line,
                  label: "Line ID" %>
      <%= f.input :birthday,
                  label: "生日",
                  as: :date,
                  include_blank: true,
                  html5: true,
                  input_html: {
                    class: "birthday",
                  } %>
      <p>年齡：<span class="age"></span></p>
      <%= f.input :accept_terms,
                  label: "我已仔細閱讀並明瞭
                          <a href='/'>【網站使用條款】</a>、
                          <a href='/'>【隱私權政策】</a>、
                          <a href='/'>【免責聲明】</a>
                          等所載入內容及意義，茲同意該等條款規定，並願遵守網站相關規範與購物規則。".html_safe,
                  as: :boolean,
                  checked_value: true,
                  unchecked_value: false,
                  input_html: {
                    class: "accept_terms"
                  } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "確認註冊",
                   class: "btn btn--red registrations_btn",
                   disabled: true %>
      <%= link_to "已有會員", new_session_path(resource_name), class: "btn btn--red" %>
    </div>
  <% end %>

  <%#% render "devise/shared/links" %>
</div>
