<div id="pop_products" class="carousel slide carousel_products" data-ride="carousel">
  <div class="carousel-inner">
    <%= render "pages/carousel_products", products: @pop_products %>
  </div>
  <a class="carousel-control-prev" href="#pop_products" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#pop_products" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
