<div id="<%= carousel_id %>" class="carousel slide carousel_products" data-ride="carousel">

  <div class="carousel-inner">
    <% product_groups.each_with_index do |product_group, index| %>
      <div class="carousel-item <%= 'active' if index == 0 %>">
        <div class="cards">
          <% product_group.each do |product| %>
            <div class="card">
              <div class="card-image-content">
                <%= link_to product_path(product) do %>
                  <%= image_tag product.image.url(:small) %>
                <% end %>
              </div>
              <div class="card-body">
                <h5 class="card-title">
                  <%= link_to product_path(product) do %>
                    <%= content_tag :span, product.name, class: "font font--red" %>
                  <% end %>
                </h5>
                <div class="card-text">折扣價 <%= product.selling_price %></div>
                <hr>
                <div class="card-text"><%= product.slogan %></div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <a class="carousel-control-prev" href="#<%= carousel_id %>" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#<%= carousel_id %>" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
