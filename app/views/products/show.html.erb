<section class="products">
  <div class="borad-section">
    <div class="square square--red"></div>
    <span class="font font--13r font--red">產品目錄</span>
  </div>
  <div class="details">
    <div class="image">
      <% if @product.has_images? %>
        <%= render "products/product_images", product: @product %>
      <% end %>
    </div>

    <div class="specs">
      <div class="specs-name">
        <span class="font font--red font--16r"><%= @product.name %></span>
        <div class="_product-tag--show-page">
          <%= render_tag(@product.tag) %>
        </div>
      </div>
      <div>
        <span class="font font--red">市價</span>:
        <%= render_details_list_price(@product) %>
      </div>
      <div class="specs-selling_price">
        <span class="font font--red">售價</span>:
        <%= render_details_selling_price(@product) %>
      </div>
      <div><%= simple_format(@product.content) %></div>

      <div>
        <% if !@product.is_unlisted %>
          <%= render "products/discount_selector", brands: @brands, product: @product %>
          <%= render "products/pre_order" %>
          <%= link_to stores_path do %>
            <span class="font font--blue">
              試算完立即聯絡門市
            </span>
          <% end %>
        <% end %>
      </div>

      <div>
        <%= link_to recoveries_path do %>
          <span class="font font--blue">
            查看更多回收價格
          </span>
        <% end %>
        <div class="recoveries-standard">
          <%= image_tag "recoveries_standard.jpg" %>
        </div>
      </div>
    </div>
  </div>
</section>
