<div id="product_images" class="carousel slide">
  <ol class="carousel-indicators">
    <% @product.images.each_with_index do |product_image, index| %>
      <li data-target="#product_images" data-slide-to="<%= index %>" class="<%= if index == 0 then "active" end %>">
        <%= image_tag product_image.image.url(:medium) %>
      </li>
    <% end %>
  </ol>
  <div class="carousel-inner">
    <% @product.images.each_with_index do |product_image, index| %>
      <div class="carousel-item <%= if index == 0 then "active" end %>">
        <%= image_tag product_image.image.url(:medium) %>
      </div>
    <% end %>
  </div>
</div>
