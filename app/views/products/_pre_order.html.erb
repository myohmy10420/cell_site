<% if @product.pre_orderable %>
  <% if current_user %>
    <button type="button" class="btn btn--red" data-toggle="modal" data-target="#pre_order_modal">
      我要預購
    </button>
  <% else %>
    <%= link_to new_user_session_path do %>
      <div class="btn btn--red">
        我要預購
      </div>
    <% end %>
  <% end %>
<% end %>

<div class="modal fade" id="pre_order_modal" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <%= content_tag :h5, "預購#{@product.name}", id: "exampleModalLabel", class: "modal-title" %>
        <button type="button" class="close" data-dismiss="modal">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">取消</button>
        <button type="button" class="btn btn-primary">我要預購</button>
      </div>
    </div>
  </div>
</div>
