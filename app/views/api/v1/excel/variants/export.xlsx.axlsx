wb = xlsx_package.workbook
wb.add_worksheet(name: "variant") do |sheet|
  sheet.add_row [
    '電信名稱(必填)',
    '方案名稱(必填)',
    '方案敘述(必填)',
    '方案敘述2(一行藍字)',
    '專案折扣(必填)',
    '預繳金額(必填,數字)',
    '優惠流量(必填)',
    '合約期(必填)'
  ]
  @variants.each do |variant|
    sheet.add_row [
      variant.telecommunication.name,
      variant.name,
      variant.content,
      variant.content2,
      variant.discount,
      variant.prepaid,
      variant.traffic,
      variant.period
    ]
  end
end
