<div class="main-container">
  <div class="categories-borad">
    <section class="section">
      <div class="square square--red"></div>
      <span class="font font--grey">商品導覽</span>
    </section>

    <section class="section">
      <div>請選擇品牌：</div>
      <% @brands.each do |b| %>
        <%= link_to "##{ b.name }", class: "btn-link" do %>
          <div class="btn btn--red btn--group">
            <%= b.name %>
          </div>
        <% end %>
      <% end %>
    </section>

    <br><br>

    <section class="section">
        <% @brands.each do |b| %>
          <div>
            <%= image_tag b.logo.url(:medium), id: "#{b.name}", class: "topic-logo" %>
            <span><%= b.name %></span>
          </div>
          <div class="category-box-container">
            <% b.categories.each do |c| %>
              <% if c.products.find_by(shelved: true).present? %>
                <%= link_to category_path(c), class: "category-box" do %>
                  <div class="category-btn">
                    <span><%= c.name %></span>
                  </div>
                <% end %>
              <% end %>
            <% end %>
          </div>
        <% end %>
    </section>
  </div>
</div>
