<div class="brand">
  <%= link_to new_admin_brand_path do %>
    <button type="button" class="btn btn-primary btn-add">新增品牌</button>
  <% end %>
  <div class="product_list">
    <table class="table">
      <thead>
        <tr>
          <th scope="col"></th>
          <th scope="col">品牌名稱</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        <% @brands.each do |brand| %>
          <tr>
            <td width="130px"><%= image_tag brand.logo.url(:normal) if brand.logo %></td>
            <td><%= brand.name %></td>

            <td width="100px">
              <%= link_to edit_admin_brand_path(brand), class: "action-icons" do %>
                <%= image_tag "icons/pencil" %>
              <% end %>
              <%= link_to admin_brand_path(brand), method: :delete, data: { confirm: "確定刪除此電信嗎？" }, class: "action-icons" do %>
                <%= image_tag "icons/x", class: "action-icons" %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
