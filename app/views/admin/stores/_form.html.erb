<%= simple_form_for @store, url: url do |f| %>
  <%= f.input :name %>
  <%= image_tag @store.image.url(:medium) if @store.image.present? %>
  <%= f.input :image, hint: "會自動裁減為250x250(px)", as: :file %>
  <%= f.input :service_line %>
  <%= f.input :fax %>
  <%= f.input :phone %>
  <%= f.input :email %>
  <%= f.input :line_ID %>
  <%= f.input :address %>
  <%= f.input :google_map_url %>
  <%= f.input :time %>

  <%= f.button :submit, "提交", class: "btn btn-primary" %>
<% end %>
