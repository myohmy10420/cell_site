<%= simple_form_for @store, url: url do |f| %>
  <%= f.input :name, label: "門市名稱" %>
  <%= image_tag @store.image.url(:medium) if @store.image.present? %>
  <%= f.input :image, label: "門市圖片", hint: "會自動裁減為250x250(px)", as: :file %>
  <%= f.input :service_line, label: "服務專線" %>
  <%= f.input :fax, label: "傳真專線" %>
  <%= f.input :phone, label: "行動電話" %>
  <%= f.input :email, label: "E-mail" %>
  <%= f.input :line_ID, label: "line ID" %>
  <%= f.input :address, label: "門市地址" %>
  <%= f.input :google_map_url, label: "google map 網址" %>
  <%= f.input :time, label: "營業時間" %>

  <%= f.button :submit, "提交", class: "btn btn-primary" %>
<% end %>
