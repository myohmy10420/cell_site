<% @carousel_ads.each do |ad| %>
  <div class="carousel_ads_image_editor">
      <%= link_to admin_carousel_ad_path(ad), method: :delete, data: { confirm: "確定刪除此廣告圖片嗎？" }, class: "action-icons" do %>
        <%= image_tag "icons/x.svg", class: "action-icons" %>
      <% end %>
    <%= image_tag ad.image.url(:medium) %>
    <button type="button" class="btn btn-primary up_sort" data-sort="<%= ad.sort %>">向上</button>
    <button type="button" class="btn btn-primary down_sort" data-sort="<%= ad.sort %>">向下</button>
  </div>
<% end %>
