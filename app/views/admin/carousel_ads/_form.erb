<%= simple_form_for @new_carousel_ad, url: admin_carousel_ads_path do |f| %>
  <%= render "admin/carousel_ads/carousel_ads_image_editor", carousel_ads: @carousel_ads %>
  <br>
  <hr>
  <%= f.input :image, label: "圖片", as: :file, hint: "圖片會自動裁減為680x400(px)" %>
  <%= f.input :url, label: "連結" %>
  <%= f.button :submit, "提交", class: "btn btn-primary" %>
<% end %>
