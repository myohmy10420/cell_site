<%= simple_form_for @recovery, url: url do |f| %>
  <%= f.association :brand, label: "手機品牌", as: :select, prompt: "請選擇品" %>
  <%= f.input :name %>
  <%= f.input :max_price, as: :integer %>
  <%= f.input :min_price, as: :integer %>

  <%= f.button :submit, "提交", class: "btn btn-primary" %>
<% end %>
