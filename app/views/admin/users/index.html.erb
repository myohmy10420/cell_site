<div class="user">
  <div style="float: right">
    <%= form_tag admin_search_users_path,
      { class: "simple_form admin_search_form" } do %>
      <%= search_field_tag "user_phone", nil,
        class: "form-control input",
        placeholder: "輸入會員手機"
      %>
      <%= select_tag "store_id",
        options_from_collection_for_select(Store.all, "id", "name"),
        prompt: "選擇註冊門市",
        class: "form-control select"
      %>
      <%= submit_tag "收尋", class: "btn btn-primary" %>
    <% end %>
  </div>

  <%= link_to api_v1_excel_users_export_path(format: :xlsx) do %>
    <button type="button" class="btn btn-primary btn-add">匯出excel</button>
  <% end %>

  <%= form_tag api_v1_excel_users_import_path, {
    multipart: true,
    style: "display: inline-block;"
  } do %>
    <%= file_field_tag :file, { style: "width: 200px;" } %>
    <%= submit_tag "匯入excel", class: "btn btn-primary" %>
  <% end %>

  <div class="list">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">電話(帳號)</th>
          <th scope="col">E-mail</th>
          <th scope="col">Line ID</th>
          <th scope="col">生日</th>
          <th scope="col">註冊門市</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.phone %></td>
            <td><%= render_dash_if_empty(user.email) %></td>
            <td><%= render_dash_if_empty(user.line) %></td>
            <td><%= !!user.birthday ? user.birthday : '-' %></td>
            <td><%= user.store ? user.store.name : "-" %></td>

            <td width="100px">
              <%= link_to edit_admin_user_path(user), class: "action-icons" do %>
                <%= image_tag "icons/pencil.svg" %>
              <% end %>
              <%= link_to admin_user_path(user), method: :delete, data: { confirm: "確定刪除此會員嗎？" }, class: "action-icons" do %>
                <%= image_tag "icons/x.svg", class: "action-icons" %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
